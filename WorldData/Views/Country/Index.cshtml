@using WorldData.Models;
@{
  Layout = "_Layout";
}
<div class="container">
    <h1>WorldData</h1>
    <ul>
      @if (Model.Count == 0)
      {
        <p>You have no items in your to do list!</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (Country country in Model)
        {
          <li><a href='/country/@country.GetCode()/show'>@country.GetName()</a></li>
        }
      }
    </ul>
    <a href="/country/new">Add a new country.</a>

    <form action="/country/delete" method="post">
      <button type="submit" name="button">Clear All Items</button>
    </form>
</div>
